---
import { Image } from "astro:assets";
import image1 from "../../assets/image 1.png";
import image2 from "../../assets/sample.jpg";
import { PrevIcon, NextIcon } from "../../utils/svgs.tsx";

interface Props {
  images?: { url: string; width: number; height: number }[];
}

const { images } = Astro.props;

// microCMSから画像が渡された場合はそれを使用、なければデフォルト画像
const defaultSlides = [image1, image2, image1, image2, image1];
const hasExternalImages = images && images.length > 0;

---
<div class="top_content flex w-full ">
<div class="right_content slidewrapper w-[60%]">
      <div class="img_wrapper">
        <div class="slide-wrapper">
          <div class="navigation-inf" id="navigations">
             <span>1</span>
            <div class="w-[50px]  bg-gray-200 rounded-full h-[2px] dark:bg-gray-700">
              <div class="bg-black h-[2px] rounded-full" id="progress"></div>
            </div>
            <span>{hasExternalImages ? images.length : defaultSlides.length}</span>
            <span id="prev" class="prev">
              <PrevIcon/>
            </span>
            <span id="next" class="next">
              <NextIcon/>
            </span>
          </div>
          <div class="slide" id="slide">
            {hasExternalImages ? (
              images.map((slide, index) => (
                <div class={`list ${index}`}>
                  <img src={slide.url} alt={`スライド${index + 1}`} style="width: 100%; height: 100%; object-fit: cover;" />
                </div>
              ))
            ) : (
              defaultSlides.map((slide, index) => (
                <div class={`list ${index}`}>
                  <Image src={slide} alt={`スライド${index + 1}`} style="width: 100%; height: 100%; object-fit: cover;" />
                </div>
              ))
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
const slide = document.getElementById('slide') as HTMLElement;
const prev = document.getElementById('prev') as HTMLElement;
const next = document.getElementById('next') as HTMLElement;
const lists = document.querySelectorAll('.list') as NodeListOf<HTMLElement>;
const totalSlides = lists.length;
const progress = document.getElementById('progress') as HTMLElement;
slide.style.width = `${totalSlides * 100}%`;
lists.forEach(list => list.style.width = `${100 / totalSlides}%`);

let count = 0;
let progressInterval: ReturnType<typeof setInterval>;
let progressValue = 0;

function updateProgressBar() {
  progressValue += 1;
  progress.style.width = `${progressValue}%`;

  if (progressValue >= 100) {
    progressValue = 0;
    nextClick();
  }
}

function resetProgressBar() {
  clearInterval(progressInterval);
  progressValue = 0;
  progress.style.width = '0%';
  startProgressBar();
}

function startProgressBar() {
  progressInterval = setInterval(updateProgressBar, 50);
}

function updateListBackground() {
  for (let i = 0; i < lists.length; i++) {
    lists[i].style.backgroundColor = i === count % totalSlides ? '#000' : '#fff';
  }
}

function nextClick() {
  slide.classList.remove(`slide${count % totalSlides + 1}`);
  count = (count + 1) % totalSlides;
  slide.classList.add(`slide${count % totalSlides + 1}`);
  updateListBackground();
}

function prevClick() {
  slide.classList.remove(`slide${count % totalSlides + 1}`);
  count = (count - 1 + totalSlides) % totalSlides;
  slide.classList.add(`slide${count % totalSlides + 1}`);
  updateListBackground();
}

next.addEventListener('click', () => {
  nextClick();
  resetProgressBar();
});
prev.addEventListener('click', () => {
  prevClick();
  resetProgressBar();
});

startProgressBar();

</script>
