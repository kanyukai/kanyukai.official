---
let { title } = Astro.props;
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import "@/scss/info.scss";
import "@fontsource/zen-kaku-gothic-new";

const description = "";
const og_image = "";

import Slide from "../../components/information/Slide.astro";
import Fishbg from "@/assets/images/fish_bg.webp";
import Instagram from "@/assets/images/Instagram.webp";
import X from "@/assets/images/X.webp";
import { getInformation } from "../../lib/microcms";
const response = await getInformation({ fields: ["location", "schedule","contents","member","id","slide","fishing-text","fishing-image","camp-text","camp-image","fes-text","fes-image"] });
const information = response.contents[0]!;

---

<Layout title={title} description={description} og_image={og_image}>
  <main>
    <a class="to_top sp-none" href="#top">
      <svg
        width="60"
        height="60"
        viewBox="0 0 60 60"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <rect opacity="0.5" x="3" y="3" width="54" height="54" fill="#74C1F5"
        ></rect>
        <path
          opacity="0.5"
          d="M7.54606 39.0757C6.48176 40.3903 7.42842 42.3504 9.11976 42.3341L13.5063 42.2918C14.1031 42.2861 14.6662 42.0141 15.0417 41.5501L28.8017 24.5471C29.6021 23.5581 31.1104 23.558 31.9109 24.5469L45.6749 41.5503C46.0504 42.0141 46.6134 42.2861 47.2102 42.2918L51.6309 42.3342C53.3221 42.3505 54.2687 40.3906 53.2046 39.076L31.9315 12.7953C31.1311 11.8065 29.623 11.8064 28.8225 12.7952L7.54606 39.0757Z"
          fill="#F0F5FD"></path>
        <rect x="0.5" y="0.5" width="59" height="59" stroke="#51B7F2"></rect>
      </svg>
    </a>

    <section id="Info-top" class="p-Info-top sp-none">
      <a class="to_top" href="#top">
        <svg
          width="60"
          height="60"
          viewBox="0 0 60 60"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect opacity="0.5" x="3" y="3" width="54" height="54" fill="#74C1F5"
          ></rect>
          <path
            opacity="0.5"
            d="M7.54606 39.0757C6.48176 40.3903 7.42842 42.3504 9.11976 42.3341L13.5063 42.2918C14.1031 42.2861 14.6662 42.0141 15.0417 41.5501L28.8017 24.5471C29.6021 23.5581 31.1104 23.558 31.9109 24.5469L45.6749 41.5503C46.0504 42.0141 46.6134 42.2861 47.2102 42.2918L51.6309 42.3342C53.3221 42.3505 54.2687 40.3906 53.2046 39.076L31.9315 12.7953C31.1311 11.8065 29.623 11.8064 28.8225 12.7952L7.54606 39.0757Z"
            fill="#F0F5FD"></path>
          <rect x="0.5" y="0.5" width="59" height="59" stroke="#51B7F2"></rect>
        </svg>
      </a>

      <h1 class="p-Info-top__ttl">Information</h1>
      <Image src={Fishbg} alt={""} class="p-activities__fish-bg" />
      <div class="slidewrapper">
        <Slide images={information.slide} />
      </div>

      <div class="p-Status__flexbox pc-none">
        <div class="p-Status__titlewrapper pc-none">
          <p>基本情報</p>
          <div class="p-Status__titlewrapper__flexbox">
            <h1 class="p-Status__titlewrapper__flexbox__title">About</h1>
          </div>
        </div>
        <div class="p-Status__img-wrapper pc-none">
          <Image src={Fishbg} alt={""} />
        </div>
      </div>

      <section id="Status" class="p-Status">
        <div class="l-container">
          <div class="p-Status__flexbox sp-none">
            <div class="p-Status__titlewrapper sp-none">
              <p>基本情報</p>
              <div class="p-Status__titlewrapper__flexbox">
                <h1 class="p-Status__titlewrapper__flexbox__title">Status</h1>
                <pre class="p-Status__titlewrapper__flexbox__margin sp-none">
                </pre>
              </div>
            </div>
            <div class="p-Status__img-wrapper sp-none">
              <Image src={Fishbg} alt={""} />
              <Image src={Fishbg} alt={""} />
            </div>
          </div>

          {
							response.contents.map((information: any) => (
              <div class="p-activities__contentswrapper">
            <div class="p-activities__contentswrapper__leftcontents">
              <div class="p-activities__contentswrapper__leftcontents__wrapper">
                <h2 class="contentstitle">正式名称</h2>
                <p>学習院大学　輔仁会竿友会同好会</p>
              </div>
              <div class="p-activities__contentswrapper__leftcontents__wrapper">
                <h2 class="contentstitle">活動場所</h2>
                <p>{information.location}</p>
              </div>
              <div class="p-activities__contentswrapper__leftcontents__wrapper">
                <h2 class="contentstitle">活動日</h2>
                <p>{information.schedule}</p>
              </div>
              <div class="p-activities__contentswrapper__leftcontents__wrapper">
                <h2 class="contentstitle">所属人数</h2>
                <p>{information.member}</p>
              </div>
            </div>
            <div class="p-activities__contentswrapper__rightcontents">
              <h2 class="contentstitle">活動内容</h2>
              <p>
                {information.contents}
              </p>
            </div>
            <div class="link-wrapper">
              <a  class="link-txt pc-none" href="https://kanyukai.jimdofree.com/">旧ブログのリンクはこちらから</a>

              <div class="icon-wrapper pc-none">
                <Image src={Instagram} alt="" />
                <Image src={X} alt="" />
              </div>
            </div>
          </div>
        ))
      } 
          
        </div>
      </section>

      <section id="Events" class="p-Events">
        <div class="l-container">
          <div class="p-Events__titlewrapper">
            <div>
              <p>年中行事</p>
              <div class="p-Events__titlewrapper__flexbox">
                <h1 class="p-Events__titlewrapper__flexbox__title">Events</h1>

                <pre class="p-Events__titlewrapper__flexbox__margin"></pre>
              </div>
            </div>
            <div class="img-wrapper">
              <Image src={Fishbg} alt={""} class="pc-none" />
            </div>
          </div>
          <div class="p-Events__cardswrapper">
            <div class="p-Events__cardswrapper__card">
              <div class="p-Events__cardswrapper__card__flexbox">
                <img src={information["fishing-image"].url} alt="月例釣行" class="slide1 sp-none" width={information["fishing-image"].width} height={information["fishing-image"].height} />
                <div class="p-Events__cardswrapper__card__flexbox__txtbox">
                  <h3>月例釣行</h3>
                  <div>
                    <img src={information["fishing-image"].url} alt="月例釣行" class="slide1 pc-none" width={information["fishing-image"].width} height={information["fishing-image"].height} />
                  </div>
                  <p>{information["fishing-text"]}</p>
                </div>
              </div>
            </div>

            <Image src={Fishbg} alt={""} class="p-Events__rightbg" />

            <div class="p-Events__cardswrapper__card">
              <div class="p-Events__cardswrapper__card__flexbox">
                <div class="p-Events__cardswrapper__card__flexbox__txtbox">
                  <h3>合宿</h3>
                  <div class="img-wrapper">
                    <img src={information["camp-image"].url} alt="合宿" class="pc-none" width={information["camp-image"].width} height={information["camp-image"].height} />
                  </div>
                  <p>{information["camp-text"]}</p>
                </div>
                <img src={information["camp-image"].url} alt="合宿" class="slide1 sp-none" width={information["camp-image"].width} height={information["camp-image"].height} />
              </div>
            </div>

            <Image src={Fishbg} alt={""} class="p-Events__leftbg" />

            <div class="p-Events__cardswrapper__card">
              <div class="p-Events__cardswrapper__card__flexbox">
                <img src={information["fes-image"].url} alt="文化祭" class="slide1 sp-none" width={information["fes-image"].width} height={information["fes-image"].height} />
                <div class="p-Events__cardswrapper__card__flexbox__txtbox">
                  <h3>文化祭</h3>
                  <div>
                    <img src={information["fes-image"].url} alt="文化祭" class="slide1 pc-none" width={information["fes-image"].width} height={information["fes-image"].height} />
                  </div>
                  <p>{information["fes-text"]}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    </section>
  </main>
</Layout>
